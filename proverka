local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- üì± –û–°–ù–û–í–ù–ê–Ø –§–£–ù–ö–¶–ò–Ø –°–û–ó–î–ê–ù–ò–Ø UI
local function CreateMainUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")
    
    -- –ì–ª–∞–≤–Ω–æ–µ –æ–∫–Ω–æ
    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 400, 0, 500)
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, -250)
    mainFrame.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
    mainFrame.Parent = screenGui
    
    local mainCorner = Instance.new("UICorner")
    mainCorner.CornerRadius = UDim.new(0, 12)
    mainCorner.Parent = mainFrame
    
    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 50)
    title.BackgroundTransparency = 1
    title.Text = "üéÆ MY SCRIPT HUB"
    title.TextColor3 = Color3.fromRGB(220, 180, 255)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 20
    title.Parent = mainFrame
    
    -- –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è –≤–∫–ª–∞–¥–æ–∫
    local tabsContainer = Instance.new("Frame")
    tabsContainer.Size = UDim2.new(1, -20, 0, 40)
    tabsContainer.Position = UDim2.new(0, 10, 0, 50)
    tabsContainer.BackgroundTransparency = 1
    tabsContainer.Parent = mainFrame
    
    local tabsLayout = Instance.new("UIListLayout")
    tabsLayout.FillDirection = Enum.FillDirection.Horizontal
    tabsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    tabsLayout.Parent = tabsContainer
    
    -- –§—Ä–µ–π–º –¥–ª—è –∫–æ–Ω—Ç–µ–Ω—Ç–∞
    local contentFrame = Instance.new("Frame")
    contentFrame.Size = UDim2.new(1, -20, 1, -120)
    contentFrame.Position = UDim2.new(0, 10, 0, 100)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = mainFrame
    
    -- üìë –ö–û–õ–õ–ï–ö–¶–ò–ò –î–õ–Ø –£–ü–†–ê–í–õ–ï–ù–ò–Ø
    local tabButtons = {}
    local tabFrames = {}
    
    -- üéµ –§–£–ù–ö–¶–ò–Ø –ó–í–£–ö–ê –ö–õ–ò–ö–ê
    local function playClick()
        -- –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –∑–≤—É–∫ –ø–æ–∑–∂–µ
    end
    
    -- üéØ –§–£–ù–ö–¶–ò–Ø –°–û–ó–î–ê–ù–ò–Ø –í–ö–õ–ê–î–ö–ò
    local function CreateTab(tabName, items)
        -- –ö–Ω–æ–ø–∫–∞ –≤–∫–ª–∞–¥–∫–∏
        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(0, 80, 1, 0)
        btn.BackgroundColor3 = Color3.fromRGB(70, 0, 105)
        btn.TextColor3 = Color3.fromRGB(220, 180, 255)
        btn.Text = tabName
        btn.Font = Enum.Font.GothamMedium
        btn.TextSize = 14
        btn.Parent = tabsContainer
        
        local btnCorner = Instance.new("UICorner")
        btnCorner.CornerRadius = UDim.new(0, 6)
        btnCorner.Parent = btn
        
        table.insert(tabButtons, btn)
        
        -- –§—Ä–µ–π–º –∫–æ–Ω—Ç–µ–Ω—Ç–∞ –¥–ª—è –≤–∫–ª–∞–¥–∫–∏
        local frame = Instance.new("Frame")
        frame.Size = UDim2.new(1, 0, 1, 0)
        frame.BackgroundTransparency = 1
        frame.Visible = #tabButtons == 1 -- –ü–µ—Ä–≤–∞—è –≤–∫–ª–∞–¥–∫–∞ –∞–∫—Ç–∏–≤–Ω–∞
        frame.Parent = contentFrame
        
        tabFrames[tabName] = frame
        
        -- –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ –≤–∫–ª–∞–¥–∫–µ
        btn.MouseButton1Click:Connect(function()
            for _, f in pairs(tabFrames) do 
                f.Visible = false 
            end
            for _, b in pairs(tabButtons) do 
                b.BackgroundColor3 = Color3.fromRGB(70, 0, 105) 
            end
            frame.Visible = true
            btn.BackgroundColor3 = Color3.fromRGB(100, 0, 150)
            playClick()
        end)
        
        -- –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –ø–µ—Ä–≤—É—é –≤–∫–ª–∞–¥–∫—É
        if #tabButtons == 1 then
            btn.BackgroundColor3 = Color3.fromRGB(100, 0, 150)
        end
        
        -- üìù –°–û–ó–î–ê–ï–ú –≠–õ–ï–ú–ï–ù–¢–´ –í–ö–õ–ê–î–ö–ò
        if items then
            for i, item in ipairs(items) do
                local itemBtn = Instance.new("TextButton")
                itemBtn.Size = UDim2.new(1, -40, 0, 44)
                itemBtn.Position = UDim2.new(0, 20, 0, (i - 1) * 50 + 10)
                itemBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
                itemBtn.TextColor3 = Color3.fromRGB(220, 180, 255)
                itemBtn.Text = item
                itemBtn.Font = Enum.Font.GothamMedium
                itemBtn.TextSize = 14
                itemBtn.Parent = frame
                
                local itemCorner = Instance.new("UICorner")
                itemCorner.CornerRadius = UDim.new(0, 6)
                itemCorner.Parent = itemBtn

                itemBtn.MouseButton1Click:Connect(function()
                    playClick()
                    print("–ù–∞–∂–∞—Ç–∞ –∫–Ω–æ–ø–∫–∞:", item, "–≤–æ –≤–∫–ª–∞–¥–∫–µ:", tabName)
                    -- –ó–¥–µ—Å—å –±—É–¥–µ—Ç –ª–æ–≥–∏–∫–∞ –¥–ª—è –∫–∞–∂–¥–æ–π –∫–Ω–æ–ø–∫–∏
                end)
            end
        end
        
        return frame
    end
    
    -- üéÆ –í–û–ó–í–†–ê–©–ê–ï–ú –§–£–ù–ö–¶–ò–ò –î–õ–Ø –£–ü–†–ê–í–õ–ï–ù–ò–Ø
    return {
        CreateTab = CreateTab,
        ScreenGui = screenGui,
        TabFrames = tabFrames
    }
end

-- üöÄ –°–û–ó–î–ê–ï–ú UI –ò –í–ö–õ–ê–î–ö–ò
local UI = CreateMainUI()

-- üìë –î–û–ë–ê–í–õ–Ø–ï–ú –ë–ê–ó–û–í–´–ï –í–ö–õ–ê–î–ö–ò
UI.CreateTab("–ì–ª–∞–≤–Ω–∞—è", {"–ê–≤—Ç–æ-—Ñ–∞—Ä–º", "–¢–µ–ª–µ–ø–æ—Ä—Ç—ã", "–ê–Ω—Ç–∏-–ê–§–ö"})
UI.CreateTab("–ò–≥—Ä–æ–∫", {"–°–∫–æ—Ä–æ—Å—Ç—å", "–ü—Ä—ã–∂–æ–∫", "–ù–æ—á–Ω–æ–µ –∑—Ä–µ–Ω–∏–µ"})
UI.CreateTab("–í–∏–∑—É–∞–ª", {"ESP", "–¢—Ä–µ–π—Å–µ—Ä—ã", "–≠—Ñ—Ñ–µ–∫—Ç—ã"})

print("‚úÖ UI —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω!")