copyBtn.Parent = mainFrame

local copyCorner = Instance.new("UICorner")
copyCorner.CornerRadius = UDim.new(0, 6)
copyCorner.Parent = copyBtn

copyBtn.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(placeId)
        copyBtn.Text = "‚úÖ –°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!"
        copyBtn.BackgroundColor3 = Color3.fromRGB(100, 220, 100)
        
        -- –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∏—Å—Ö–æ–¥–Ω—ã–π —Ç–µ–∫—Å—Ç —á–µ—Ä–µ–∑ 2 —Å–µ–∫—É–Ω–¥—ã
        wait(2)
        copyBtn.Text = "üìã –°–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å ID"
        copyBtn.BackgroundColor3 = Color3.fromRGB(80, 180, 255)
    else
        copyBtn.Text = "‚ùå –û—à–∏–±–∫–∞ –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—è"
        copyBtn.BackgroundColor3 = Color3.fromRGB(220, 80, 80)
    end
end)

print("üéÆ Game Info Tool –∑–∞–≥—Ä—É–∂–µ–Ω!")
