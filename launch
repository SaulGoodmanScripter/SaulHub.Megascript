-- Minimize/Restore functions
local function minimizeGUI()
 local shrink = TweenService:Create(Frame, TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In), {
  Size = UDim2.new(0, 0, 0, 0),
  Position = UDim2.new(0.5, 0, 0.5, 0)
 })
 shrink:Play()
 shrink.Completed:Wait()
 Frame.Visible = false
end

-- Close button
TextButton_2.MouseButton1Click:Connect(function()
 local fadeOut = TweenService:Create(Frame, TweenInfo.new(0.3), {
  Size = UDim2.new(0, 0, 0, 0),
  Position = UDim2.new(0.5, 0, 0.5, 0)
 })
 fadeOut:Play()
 fadeOut.Completed:Wait()
 SaulScriptUI:Destroy()
end)

-- Minimize button
TextButton.MouseButton1Click:Connect(function()
 minimizeGUI()
end)

-- START BUTTON - –æ—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è

StartButton.MouseButton1Click:Connect(function()
    -- –£–¥–∞–ª—è–µ–º UI
    SaulScriptUI:Destroy()
    
    -- –ó–¥–µ—Å—å –∑–∞–≥—Ä—É–∂–∞–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π —Å–∫—Ä–∏–ø—Ç
    loadstring(game:HttpGet('https://raw.githubusercontent.com/MQPS7/99-Night-in-the-Forset/refs/heads/main/Gfarm'))()
    
    -- –í—Ä–µ–º–µ–Ω–Ω–æ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
    print("üöÄ Script loader: UI removed, ready to load main script!")
end)

-- Keyboard shortcut
UserInputService.InputBegan:Connect(function(input, gameProcessed)
 if gameProcessed then return end
 
 if input.KeyCode == Enum.KeyCode.LeftControl then
  if Frame.Visible then
   minimizeGUI()
  else
   Frame.Visible = true
   local expand = TweenService:Create(Frame, TweenInfo.new(0.4, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
    Size = UDim2.new(0.281469911, 0, 0.287951797, 0),
    Position = UDim2.new(0.351602823, -125, 0.342168689, 120)
   })
   expand:Play()
  end
 end
end)

-- –£–º–Ω–æ–µ –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏–µ UI
local function setupUIScale()
    local isMobile = UserInputService.TouchEnabled
    
    if isMobile then
        print("üì± SaulScript: –û–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è –¥–ª—è –º–æ–±–∏–ª—å–Ω–æ–≥–æ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–∞")
        
        -- –û—Å–Ω–æ–≤–Ω–æ–π —Ñ—Ä–µ–π–º –¥–ª—è —Ç–µ–ª–µ—Ñ–æ–Ω–∞
        Frame.Size = UDim2.new(0.5, 0, 0.4, 0)
        Frame.Position = UDim2.new(0.5, 0, 0.5, 0)
        Frame.AnchorPoint = Vector2.new(0.5, 0.5)
        
        -- –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —à—Ä–∏—Ñ—Ç—ã –¥–ª—è —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏ –Ω–∞ —Ç–µ–ª–µ—Ñ–æ–Ω–µ
        TextLabel.TextSize = 18
        TextButton.TextSize = 20
        TextButton_2.TextSize = 20
        StartButton.TextSize = 22
        
        -- –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º –∫–Ω–æ–ø–∫—É START –¥–ª—è –ø–∞–ª—å—Ü–µ–≤
        StartButton.Size = UDim2.new(0.9, 0, 0.5, 0)
        StartButton.Position = UDim2.new(0.05, 0, 0.25, 0)
        
    else
        print("üíª SaulScript: –ü–ö - —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å")
    end
end

-- –ü—Ä–∏–º–µ–Ω—è–µ–º –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏–µ
setupUIScale()

print("‚úÖ Saul Script Loader UI - Ready!")